{{#each posts as |post| }}
<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
            <a href="api/post/{{id}}">{{title}}</a>
        </h2>
    </div>
    <div class="col-md-7">
        <p>
            {{format_date date_created}}
        </p>
    </div>
</div>
{{/each}}
<div class = "none">
    {{> post-form}}
</div>
<button id="create-post-btn">Create a post</button>
<script src="/js/dashboard.js"></script>